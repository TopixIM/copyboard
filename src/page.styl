
*
  box-sizing border-box
  font-family "Monaco", 'wenquanyi micro hei mono', "moonospace"
  -webkit-transition-duration 0.1s

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,80)
  border-radius 2px

body
  margin 0px
  padding 0px
  font-family "Monaco", 'wenquanyi micro hei mono', monospace
  background hsl(0,0,90)

#box
  width 800px
  margin 0px auto
  padding 40px 0px 40px 0px
  // border 1px solid hsla(0,0,0,0)

button
  border none
  cursor pointer

.unit
  padding 10px
  // margin 10px 0px

.text
  width 700px
  min-height 60px
  border none
  outline none
  display inline-block
  box-shadow 0px 0px 10px hsl(0,0,80)
  padding 7px
  font-size 14px
  overflow auto
  margin-right 10px
  background white

  a
    color blue
    text-decoration none

textarea
  height 300px
  resize none

.link
  vertical-align top
  margin 5px
  display inline-block
  text-decoration none
  background white
  padding 4px 8px
  box-shadow 0px 0px 4px gray

  &:hover
    box-shadow 1px 0px 8px gray

#more
  width 400px
  height 40px
  margin 0px auto
  padding 10px
  text-align center
  cursor pointer

  &:hover
    background white

#writer
  box-shadow 0px 0px 6px hsl(0,0,80)
  width 900px
  height 100%
  margin 0px auto

  textarea
    border none
    outline none
    width 100%
    height 100%
    background hsla(0,0,0,0)
    padding 10px 10px 600px 10px
    font-size 16px
    letter-spacing 0px
    line-height 24px